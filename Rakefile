require 'jeweler2'
Jeweler::Tasks.new do |gemspec|
    gemspec.name = "spawnr"
    gemspec.summary = "spawnr gem--easy spawning for window (i.e. backgrounding them so they don't take up your console)"
    gemspec.description = gemspec.summary
    gemspec.email = "rogerdpack@gmail.com"
    gemspec.homepage = "http://github.com/rdp/spawnr"
    gemspec.authors = ["rogerdpack"]
    gemspec.add_development_dependency('jeweler2')
    gemspec.version = '0.0.1'
end
